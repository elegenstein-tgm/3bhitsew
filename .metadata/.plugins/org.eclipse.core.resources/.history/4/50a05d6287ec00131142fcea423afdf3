import javax.swing.JOptionPane;


public class Controler {
	public View v;
	public Controler() {
		v =new View();
		
	}
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		
		Controler c = new Controler();
		String s = JOptionPane.showInputDialog("4 Stellen Farbcode aus A-F\nRot Gelb Grün Blau Violet Schwarz");
		s = s.toLowerCase();
		c.v.cb = new CodeBrett(s.charAt(0), s.charAt(1), s.charAt(2), s.charAt(3));
		c.v.setVisible(true);

	}

}
